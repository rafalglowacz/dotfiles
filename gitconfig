[alias]
	co = checkout
	ci = commit
	d = diff -w
	b = branch
	st = status
	r = reflog --date iso
[pull]
	rebase = false
[core]
	editor = nvim
	pager = delta
[include]
	path = ~/.gitconfig.local
[stash]
    showPatch = 1
    showStat = 0
[init]
	defaultBranch = main
[credential]
	helper = cache --timeout=3600
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	light = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
