[include]
	path = ~/.gitconfig.local
	# path = ~/Dev/lib/delta/themes.gitconfig
[alias]
	b   = branch
	co  = checkout
	ci  = commit -av
	d   = diff -w
	dt  = difftool
	hs  = log --pretty='%C(yellow)%h %C(cyan)%cd %C(auto)%s%C(auto)%d %C(reset)' --graph --date=human
	hsl = log --pretty='%C(yellow)%h %C(cyan)%cd %C(auto)%s â€¢ %C(blue)%aN%C(auto)%d %C(reset)' --graph --date=human
	mnn = merge --no-commit --no-ff
	r   = reflog --date iso
	st  = status
[pull]
	rebase = false
[core]
	editor = nvim
	pager = delta
[stash]
	showPatch = 1
	showStat = 0
[init]
	defaultBranch = main
[credential]
	helper = cache --timeout=3600
[interactive]
	diffFilter = delta --color-only
[delta]
	# features = tangara-chilensis 
	# syntax-theme = Solarized (light)
	side-by-side = false
	diff-highlight = false
	diff-so-fancy = false
	line-numbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
	tool = vscode
[merge]
	tool = vscode
[difftool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[mergetool "vscode"]
	cmd = code --wait $MERGED
