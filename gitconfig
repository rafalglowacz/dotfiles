[include]
	path = ~/.gitconfig.local
  path = ~/Dev/delta/themes.gitconfig
[alias]
	co = checkout
	ci = commit
	d = diff -w
	dt = difftool
	b = branch
	mnn = merge --no-commit --no-ff
	st = status
	r = reflog --date iso
	hs = log --pretty='%C(yellow)%h %C(cyan)%cd%C(auto)%d %Creset%s' --graph --date=short
	hsl = log --pretty='%C(yellow)%h %C(cyan)%cd %Cblue%aN%C(auto)%d %Creset%s' --graph --date=short
[pull]
	rebase = false
[core]
	editor = nvim
	pager = delta
[stash]
    showPatch = 1
    showStat = 0
[init]
	defaultBranch = main
[credential]
	helper = cache --timeout=3600
[interactive]
	diffFilter = delta --color-only
[delta]
	#features = tangara-chilensis 
	syntax-theme = Solarized
	side-by-side = false
	navigate = true
	light = true
	diff-highlight = false
	diff-so-fancy = false
	line-numbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
  tool = vscode
[merge]
  tool = vscode
[difftool "nvim"]
  cmd = nvim -d $LOCAL $REMOTE
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[mergetool "vscode"]
  cmd = code --wait $MERGED
